<script type="text/javascript">
    var vm = new Vue({
        el: '#app',
        data: {
            totalCount: 0,
            totalPage: 0,
            currentpage: 1,
            searchtxt: "",
            dataList: null
        },
        mounted: function () {
            var that = this;
            axios.get('/Supplier/PageGoods')
                .then(function (res) {
                    console.log(res.data);
                    that.totalCount = res.data.totalCount;
                    that.totalPage = res.data.totalPage;
                    that.dataList = res.data.dataList;
                })
        },
        methods: {
            firstpage: function () {
                var that = this;
                if (that.currentpage != 1) {
                    that.currentpage = 1;
                    axios({
                        url: "/Supplier/PageGoods",
                        method: "get",
                        params: { 'CurPage': that.currentpage, 'StrWhere': that.searchtxt }
                    }).then(function (res) {
                        that.totalCount = res.data.totalCount;
                        that.totalPage = res.data.totalPage;
                        that.dataList = res.data.dataList;
                    })
                }
            },
            nextpage: function () {
                var that = this;
                if (that.currentpage < that.totalPage) {
                    that.currentpage += 1;
                    axios({
                        url: "/Supplier/PageGoods",
                        method: "get",
                        params: { 'CurPage': that.currentpage, 'StrWhere': that.searchtxt }
                    }).then(function (res) {
                        that.totalCount = res.data.totalCount;
                        that.totalPage = res.data.totalPage;
                        that.dataList = res.data.dataList;
                    })
                }

            },
            thispage: function (res) {
                var that = this;
                that.currentpage = res;
                axios({
                    url: "/Supplier/PageGoods",
                    method: "get",
                    params: { 'CurPage': that.currentpage, 'StrWhere': that.searchtxt }
                }).then(function (res) {
                    that.totalCount = res.data.totalCount;
                    that.totalPage = res.data.totalPage;
                    that.dataList = res.data.dataList;
                })

            },
            prevpage: function () {
                var that = this;
                if (that.currentpage > 1) {
                    that.currentpage -= 1;
                    axios({
                        url: "/Supplier/PageGoods",
                        method: "get",
                        params: { 'CurPage': that.currentpage, 'StrWhere': that.searchtxt }
                    }).then(function (res) {
                        that.totalCount = res.data.totalCount;
                        that.totalPage = res.data.totalPage;
                        that.dataList = res.data.dataList;
                    })
                }

            },
            lastpage: function () {
                var that = this;
                if (that.currentpage != that.totalPage) {
                    that.currentpage = that.totalPage;
                    axios({
                        url: "/Supplier/PageGoods",
                        method: "get",
                        params: { 'CurPage': that.currentpage, 'StrWhere': that.searchtxt }
                    }).then(function (res) {
                        that.totalCount = res.data.totalCount;
                        that.totalPage = res.data.totalPage;
                        that.dataList = res.data.dataList;
                    })
                }

            },
            search: function () {
                var that = this;
                that.currentpage = 1;
                axios({
                    url: "/Supplier/PageGoods",
                    method: "get",
                    params: { 'CurPage': that.currentpage, 'Name': that.searchtxt, 'State': that.selectval }
                }).then(function (res) {
                    that.totalCount = res.data.totalCount;
                    that.totalPage = res.data.totalPage;
                    that.dataList = res.data.dataList;
                })
            },
            edituser: function (res) {
                var that = this;
                axios({
                    method: 'put',
                    url: '/Supplier/UpdateGoods?Id=' + res,
                }).then(function (result) {
                    //监控API返回结果result
                    console.log(result);
                    //根据返回结果给出修改成功提示
                    if (result.data == true) {
                        alert('修改成功');
                        //更新数据
                        that.$options.methods.show(that);
                    }
                })
            },
            show: function (result) {
                axios.get('http://localhost:60259/api/Supplier/GetGoods').then(function (res) {
                    result.dataList = res.data;
                });
            }
        }
    })

</script>