
@{
    Layout = null;
}
@model List<LWT.Model.Orders>
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="Bookmark" href="/favicon.ico">
    <link rel="Shortcut Icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/H-ui.admin.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/lib/Hui-iconfont/1.0.8/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/skin/default/skin.css" id="skin" />
    <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/style.css" />
    <meta name="viewport" content="width=device-width" />
    <title>采购商对账详情</title>
    <link href="~/Content/lib/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="js/jquery-jtumbler-1.0.1.min.js"></script>
</head>
<body>
    <style>
        li {
            list-style-type: none;
        }
    </style>
    <div id="app">
        <div style="padding-left:22px;padding-top:30px;">
            <ul>
                <li>
                    <input id="" type="button" value="2015" onclick="options-container()" />
                    <input id="" type="button" value="2017" />
                </li>
            </ul>
        </div>
        <div class="page-container">
            <div id="tab-system" class="HuiTab">
                <div class="tabBar cl">
                    <span>第四次结算</span>
                    <span>第三次结算</span>
                    <span>第二次结算</span>
                    <span>第一次结算</span>
                </div>
                <div class="tabCon">
                    <div class="row cl" >
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            公司名称：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            <span class="c-red"></span>
                            北京七彩公司
                        </div>
                    </div>
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            结算类型：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            季度
                        </div>
                    </div>
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            结算周期：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            2018年04月1日-2018年06月1日
                        </div>
                    </div>
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            订单数：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            98898
                        </div>
                    </div>
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            收款金额：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            $151500151.00元
                        </div>
                    </div>
                </div>
                <div class="tabCon">
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            订单数量：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            8974笔
                        </div>
                    </div>
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            收款金额：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            $888998898.00元
                        </div>
                    </div>
                </div>
                <div class="tabCon">
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            订单数量：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            5151笔
                        </div>
                    </div>
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            收款金额：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            $75151598.00元
                        </div>
                    </div>
                </div>
                <div class="tabCon">
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            订单数量：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            2231笔
                        </div>
                    </div>
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-2">
                            <span class="c-red">*</span>
                            收款金额：
                        </label>
                        <div class="formControls col-xs-8 col-sm-9">
                            $61515598.00元
                        </div>
                    </div>
                </div>
                <div class="tabCon">
                </div>
            </div>
        </div>
        <div style="padding-left:25px;">
            <div style="padding-left:320px;margin-top:5px;">
                <input id="Button1" type="button" value="发送对账单" style="background-color:blue;color:white" />
            </div>
            <table class="table table-border" style="width:400px;height:300px;">
                <thead>
                    <tr class="text-c">
                        <th>订单编号</th>
                        <th>创建时间</th>
                        <th>状态</th>
                        <th>商品</th>
                        <th>订单金额</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-c">
                            <td>@item.OrderNum</td>
                            <td>@item.OrderTime</td>
                            <td>@item.Address</td>
                            <td>@item.UserId</td>
                            <td>@item.Price</td>
                        </tr>
                    }
                </tbody>
              </table>
        </div> 
    </div>
    <!--_footer 作为公共模版分离出去-->
    <script type="text/javascript" src="~/Content/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/lib/layer/2.4/layer.js"></script>
    <script type="text/javascript" src="~/Content/static/h-ui/js/H-ui.min.js"></script>
    <script type="text/javascript" src="~/Content/static/h-ui.admin/js/H-ui.admin.js"></script> <!--/_footer 作为公共模版分离出去-->
    <!--请在下方写此页面业务相关的脚本-->
    <script type="text/javascript" src="~/Content/lib/My97DatePicker/4.8/WdatePicker.js"></script>
    <script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/jquery.validate.js"></script>
    <script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/validate-methods.js"></script>
    <script type="text/javascript" src="~/Content/lib/jquery.validation/1.14.0/messages_zh.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.skin-minimal input').iCheck({
                checkboxClass: 'icheckbox-blue',
                radioClass: 'iradio-blue',
                increaseArea: '20%'
            });
            $("#tab-system").Huitab({
                index: 0
            });
        });
    </script>
    <!--/请在上方写此页面业务相关的脚本-->
</body>
</html>
