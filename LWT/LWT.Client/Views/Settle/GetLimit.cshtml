
@{
    Layout = null;
}
@model List<LWT.Model.Limits>
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="Bookmark" href="/favicon.ico">
    <link rel="Shortcut Icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/H-ui.admin.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/lib/Hui-iconfont/1.0.8/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/skin/default/skin.css" id="skin" />
    <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/style.css" />
    <script src="~/js/vue.js"></script>
    <script src="~/js/axios.js"></script>
</head>
<body>
    <div style="text-align:center;" id="app">
        <div style="padding-top:20px;">
            <input type="text" placeholder="请输入企业名称" style="height:26px;" v-model="searchtxt"/>
            <button class="btn btn-success" type="button" id="" name="" v-on:click="search"><i class="Hui-iconfont">&#xe665;</i>查询</button>
            <span>
                <span>审批状态:</span><select name="values"  v-model="selectval" id="select">
                    <option value="2">选择审核状态</option>
                    <option value="0">未审核</option>
                    <option value="1">已审核</option>
                </select>
            </span>
        </div>
        <div style="padding-top:20px;">
            <table class="table table-border table-bordered table-bg">
                <tr class="text-c">
                    <th>序号</th>
                    <th>企业名称</th>
                    <th>结算方式</th>
                    <th>总额度</th>
                    <th>申请额度</th>
                    <th>运营商审核装状态</th>
                    <th>审批额度</th>
                    <th>操作</th>
                </tr>
                <tbody>
                    <tr class="text-c" v-for="item in dataList">
                        <td>{{item.id}}</td>
                        <td>{{item.buyerName}}</td>
                        <td>{{item.accountMode}}</td>
                        <td>{{item.totalAmount}}</td>
                        <td>{{item.approveLimit}} </td>
                        <td class="td-status">
                            <span class="label label-success radius" v-if="item.state==0">
                                未审核
                            </span>
                            <span class="label label-success radius" v-else>
                                已审核
                            </span>
                        </td>
                        <td>{{item.approveLimit}} </td>
                        <td class="td-manage"><span class="label label-info" style="background-color:cornflowerblue;"><a title="额度数据详情" href="javascript:;" onclick="admin_edit('管理员编辑','/Settle/ThinMaLimite/','2','800','500')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont" style="color:white;">[查看]</i></a> </span></td>
                    </tr>
                </tbody>
            </table>
            <br />
            <!--分页布局-->
            <div style="width:50%;margin:auto;">
                <a class="btn btn-secondary-outline" v-on:click="firstpage">首页</a>
                <a class="btn btn-secondary-outline" v-on:click="prevpage">上一页</a>
                <span v-for="index in totalPage">
                    <a class="btn btn-secondary" v-if="index==currentpage">{{index}}</a>
                    <a class="btn btn-secondary-outline" v-else v-on:click="thispage(index)">{{index}}</a>
                </span>
                <a class="btn btn-secondary-outline" v-on:click="nextpage">下一页</a>
                <a class="btn btn-secondary-outline" v-on:click="lastpage">尾页</a>
                <span>共{{totalPage}}页,共{{totalCount}}条</span>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Content/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/lib/layer/2.4/layer.js"></script>
    <script src="~/Content/static/h-ui/js/H-ui.min.js"></script>
    <script type="text/javascript" src="~/Content/static/h-ui.admin/js/H-ui.admin.js"></script> <!--/_footer 作为公共模版分离出去-->
    <!--请在下方写此页面业务相关的脚本-->
    <script type="text/javascript" src="~/Content/lib/My97DatePicker/4.8/WdatePicker.js"></script>
    <script type="text/javascript" src="~/Content/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Content/lib/laypage/1.2/laypage.js"></script>
    <script type="text/javascript">
        var vm = new Vue({
            el: '#app',
            data: {
                totalCount: 0,
                totalPage: 0,
                currentpage: 1,
                searchtxt: "",
                selectval:2,
                dataList: null
            },
            mounted: function () {
                var that = this;
                axios.get('/Settle/GetLimits')
                    .then(function (res) {
                        that.totalCount = res.data.totalCount;
                        that.totalPage = res.data.totalPage;
                        that.dataList = res.data.dataList;
                    })
            },
            methods: {
                firstpage: function () {
                    var that = this;
                    if (that.currentpage != 1) {
                        that.currentpage = 1;
                        axios({
                            url: "/Settle/GetLimits",
                            method: "get",
                            params: { 'CurPage': that.currentpage, 'BuyerName': that.searchtxt, 'State': that.selectval}
                        }).then(function (res) {
                            console.log(res.data)
                            that.totalCount = res.data.totalCount;
                            that.totalPage = res.data.totalPage;
                            that.dataList = res.data.dataList;
                        })
                    }
                },
                nextpage: function () {
                    var that = this;
                    if (that.currentpage < that.totalPage) {
                        that.currentpage += 1;
                        axios({
                            url: "/Settle/GetLimits",
                            method: "get",
                            params: { 'CurPage': that.currentpage, 'BuyerName': that.searchtxt, 'State': that.selectval }
                        }).then(function (res) {
                            that.totalCount = res.data.totalCount;
                            that.totalPage = res.data.totalPage;
                            that.dataList = res.data.dataList;
                        })
                    }
                },
                thispage: function (res) {
                    var that = this;
                    that.currentpage = res;
                    axios({
                        url: "/Settle/GetLimits",
                        method: "get",
                        params: { 'CurPage': that.currentpage, 'BuyerName': that.searchtxt, 'State': that.selectval}
                    }).then(function (res) {
                        that.totalCount = res.data.totalCount;
                        that.totalPage = res.data.totalPage;
                        that.dataList = res.data.dataList;
                    })
                },
                prevpage: function () {
                    var that = this;
                    if (that.currentpage > 1) {
                        that.currentpage -= 1;
                        axios({
                            url: "/Settle/GetLimits",
                            params: { 'CurPage': that.currentpage, 'BuyerName': that.searchtxt, 'State': that.selectval }
                        }).then(function (res) {
                            that.totalCount = res.data.totalCount;
                            that.totalPage = res.data.totalPage;
                            that.dataList = res.data.dataList;
                        })
                    }
                },
                lastpage: function () {
                    var that = this;
                    if (that.currentpage != that.totalPage) {
                        that.currentpage = that.totalPage;
                        axios({
                            url: "/Settle/GetLimits",
                            method: "get",
                            params: { 'CurPage': that.currentpage, 'BuyerName': that.searchtxt, 'State': that.selectval}
                        }).then(function (res) {
                            that.totalCount = res.data.totalCount;
                            that.totalPage = res.data.totalPage;
                            that.dataList = res.data.dataList;
                        })
                    }

                },
                search: function () {
                    var that = this;
                    that.currentpage = 1;
                    axios({
                        url: "/Settle/GetLimits",
                        method: "get",
                        params: { 'CurPage': that.currentpage, 'BuyerName': that.searchtxt, 'State': that.selectval }
                    }).then(function (res) {
                        that.totalCount = res.data.totalCount;
                        that.totalPage = res.data.totalPage;
                        that.dataList = res.data.dataList;
                    })
                }
            }
        })
    </script>
    <script type="text/javascript">
        /*管理员-编辑*/
        function admin_edit(title, url, id, w, h) {
            layer_show(title, url, w, h);
        }
    </script>
</body>
</html>





